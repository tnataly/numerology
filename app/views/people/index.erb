<div class="header">
	<h3>People <br><small> Person -> Show All </small> </h3>
	<hr />
</div>

<table class="table table-striped table-hover">
	<thead>
		<th>#</th>
		<th>Full name</th>
		<th>Birthdate</th>
		<th colspan="2">Actions</th>
	</thead>

	<tbody>
	<% i=1 %>
	<% @people.each do |person| %>
		<tr>
			<td> <%= i %> </td>
			<td><a href="/people/<%= person.id %>"> 
				<%= "#{person.first_name} #{person.last_name}" %>
				</a>
			</td>
			<td> 
				<%= person.birthdate.strftime("%-d of %B, %Y") %>
			</td>
 
			<td>
				<form action="/people/<%= person.id %>" method="post">
					<input type="hidden" name="_method" value="delete" />
					<input type="submit" class="btn btn-link" value="delete" />
				</form>	
			</td>
			<td>
				<a class="btn btn-link" href="/people/<%= person.id %>/edit"> edit </a>
			</td>
		</tr>
		<% i += 1 %>
	<% end %>	
	</tbody>
</table>